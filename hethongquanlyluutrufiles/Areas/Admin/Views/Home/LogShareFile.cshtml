@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<hethongquanlyluutrufiles.Models.SharedFile>

@{
    int CurrentPage = ViewBag.CurrentPage;
    ViewData["Title"] = "Nhật ký chia sẻ file" + CurrentPage;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <h2 class="header-title">Nhật ký chia sẻ file</h2>
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="TrangChuAdmin" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
        </nav>
    </div>
</div>


<div class="card">
    <div class="card-body">
        <div class="col m-b-30">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr role="row">
                            <th>ID</th>
                            <th>Tên file</th>
                            <th>Người nhận</th>
                            <th>Thời gian chia sẻ</th>
                        </tr>
                    </thead>
                    <tbody id="records_table">
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr role="row" class="odd">
                                    <td> @item.FileId</td>
                                    <td>@item.File.FileName</td>
                                    <td>@item.SharedWithUser.Username</td>
                                    <td>@item.DateShared </td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>
            </div>
        </div>
        <div aria-label="Page navigation example" style="float: right">
            <ul class="pagination">
                <pager class="pager-container" list="@Model" asp-area="Admin" asp-controller="Home" asp-action="LogShareFile" />
            </ul>
        </div>
    </div>
</div>