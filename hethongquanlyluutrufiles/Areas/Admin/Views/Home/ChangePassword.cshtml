@model hethongquanlyluutrufiles.ModelViews.ChangePasswordViewModel
@{
    ViewData["Title"] = "Thay đổi mật khẩu";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h4 class="card-title">Thay đổi mật khẩu</h4>
    </div>
    <div class="card-body">
        <form asp-area="Admin" asp-controller="Home" asp-action="ChangePassword" method="post" class="myaccount-form">
            <div class="form-group">
                <label class="font-weight-semibold">Mật khẩu hiện tại:</label>
                <input type="password" asp-for="PasswordCurrent" class="form-control  col-md-6" placeholder="Mật khẩu hiện tại">
                <span asp-validation-for="PasswordCurrent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="font-weight-semibold">Mật khẩu mới:</label>
                <input type="password" asp-for="PasswordNew" class="form-control  col-md-6" placeholder="Mật khẩu mới">
                <span asp-validation-for="PasswordNew" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="font-weight-semibold">Nhập lại mật khẩu mới:</label>
                <input type="password" asp-for="ConfirmPasswordNew" class="form-control  col-md-6" placeholder="Nhập lại mật khẩu mới">
                <span asp-validation-for="ConfirmPasswordNew" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <button class="btn btn-primary m-t-30">Thay đổi</button>
            </div>
        </form>
    </div>
</div>


